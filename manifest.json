{
  "manifest_version": 3,
  "name": "GitHub PR Enhancer",
  "version": "2.0.0",
  "description": "Display reviewers in GitHub PR list view, and allow filtering by pending reviews.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://github.com/*",
    "https://api.github.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "style.css"
      ]
    }
  ],
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "128": "icons/icon.png"
  }
}
